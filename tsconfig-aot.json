{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "outDir": "build/www",
        "lib": ["es7", "dom"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "index/app/*": ["src/main/webapp/index/app/*"],
            "accounts/app/*": ["src/main/webapp/accounts/app/*"],
            "blogs/app/*": ["src/main/webapp/blogs/app/*"],
            "drives/app/*": ["src/main/webapp/drives/app/*"],
            "admin/app/*": ["src/main/webapp/admin/app/*"]
        },
        "importHelpers": true
    },
    "angularCompilerOptions": {
        "genDir": "build/aot",
        "skipMetadataEmit": true,
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": true
    }
}
